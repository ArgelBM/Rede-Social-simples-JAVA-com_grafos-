<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="item" prefHeight="53.0" style="-fx-background-color: #F2EEF2;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controlers.ControlerPerfil">
   <children>
      <ImageView fitHeight="55.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/img/account.png" />
         </image>
      </ImageView>
      <AnchorPane fx:id="anchorPane" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <VBox>
                                 <children>
                                    <Label fx:id="nomeUsuario" style="-fx-background-color: transparent;" text="Label" textFill="#1b1b1b" wrapText="true" />
                                 </children>
                              </VBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label fx:id="emailUsuario" text="lista" textFill="#757575" />
                                    <VBox alignment="TOP_CENTER">
                                       <padding>
                                          <Insets top="8.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <JFXButton buttonType="RAISED" onAction="#indicar" style="-fx-background-color: red; -fx-background-radius: 5px;" text="Indicar +" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="botaoSeguir" buttonType="RAISED" minWidth="120.0" onAction="#seguir" style="-fx-background-color: green; -fx-background-radius: 5px;" text="Add +" textFill="WHITE">
                     <graphic>
                        <MaterialIconView glyphName="LOCK" size="20" />
                     </graphic>
                  </JFXButton>
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
